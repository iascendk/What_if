<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascendcorparation.what_if.play"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/other">



        <ImageView
            android:layout_width="415dp"
            android:layout_height="300dp"
            android:id="@+id/ivt"
            android:background="#bb1a1a" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/plus"
        android:layout_gravity="top|center_vertical"
        android:onClick="increaseInteger"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:background="@drawable/buttonshape5"
        android:layout_below="@+id/question"
        android:layout_toLeftOf="@+id/score"
        android:layout_toStartOf="@+id/score"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/score"
        android:padding="20dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:shadowColor="#0E1C9C"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/minus"
        android:layout_toLeftOf="@+id/minus"
        android:layout_toStartOf="@+id/minus" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/question"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/ivt"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="gravity"
        android:background="#040303" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/minus"
        android:onClick="decreaseInteger"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="110sp"
        android:background="@drawable/buttonshape6"
        android:layout_alignTop="@+id/plus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="4dp"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="30"
        android:id="@+id/mCount"
        android:textSize="50sp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape4"
        android:layout_above="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shuffle"
        android:id="@+id/shuffle"
        android:layout_below="@+id/question"
        android:layout_toRightOf="@+id/plus"
        android:layout_toEndOf="@+id/plus" />

</RelativeLayout>
